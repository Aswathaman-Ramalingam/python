a=int(input())
t=1
h=a-2
for i in range(a):
    if i==0:
        print('* '*a)
    elif i!=a-1:
        m='- '*i
        print(m,end="")
        print('*',end=" ")
        for i1 in range(1,h+1):
            print(t,end=" ")
            t=t+1
        print("*")
    elif i==a-1:
        print('- '*i,end=" ")
        print('* '*a,end=" ")
